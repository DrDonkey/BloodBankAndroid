<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RequestBloodActivity">


    <Button
        android:id="@+id/btnLocation"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_alignEnd="@+id/tvLocation"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="105dp"
        android:text="@string/btn_location"
        android:textAllCaps="false"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/btnPostRequest"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvLocation"
        app:layout_constraintTop_toBottomOf="@+id/etChooseDate" />

    <Button
        android:id="@+id/btnChooseTime"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_alignEnd="@id/etChooseTime"
        android:layout_marginEnd="18dp"
        android:text="Choose Time"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/etChooseTime"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnChooseDate"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignEnd="@id/etChooseDate"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp"
        android:text="Choose Date"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@+id/etChooseDate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/etChooseDate"
        app:layout_constraintTop_toTopOf="@+id/etChooseDate" />

    <Button
        android:id="@+id/btnPostRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="17dp"
        android:text="@string/btn_post_my_request"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLocation" />

    <EditText
        android:id="@+id/etPhoneNum"
        android:layout_width="0dp"
        android:layout_height="37dp"
        android:layout_alignEnd="@id/tvPhoneNum"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="75dp"
        android:ems="10"
        android:hint="@string/tv_phone_num"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnChooseTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvPhoneNum"
        app:layout_constraintTop_toBottomOf="@+id/spinnerBloodGroup" />

    <EditText
        android:id="@+id/etAmount"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignEnd="@id/tvAmount"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="28dp"
        android:ems="10"
        android:hint="@string/et_amount"
        android:inputType="number"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/tvPhoneNum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvAmount"
        app:layout_constraintTop_toBottomOf="@+id/spinnerBloodGroup" />

    <EditText
        android:id="@+id/etName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="15dp"
        android:layout_toEndOf="@id/tvName"
        android:ems="10"
        android:hint="@string/et_hint_full_name"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/spinnerBloodGroup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvName"
        app:layout_constraintTop_toBottomOf="@+id/tvBloodDon" />

    <EditText
        android:id="@+id/etChooseTime"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignBottom="@id/tvLocation"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="26dp"
        android:ems="10"
        android:hint="Choose Time"
        android:inputType="time"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/etChooseDate"
        app:layout_constraintEnd_toStartOf="@+id/btnChooseTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPhoneNum" />


    <EditText
        android:id="@+id/etChooseDate"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignBottom="@id/etChooseTime"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="18dp"
        android:ems="10"
        android:hint="Choose Date"
        android:inputType="date"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/btnLocation"
        app:layout_constraintEnd_toStartOf="@+id/btnChooseDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etChooseTime" />

    <Spinner
        android:id="@+id/spinnerBloodGroup"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignEnd="@id/tvBloodDon"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="14dp"
        android:entries="@array/spinner_blood_group"
        app:layout_constraintBottom_toTopOf="@+id/etAmount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/etName" />

    <TextView
        android:id="@+id/tvLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="95dp"
        android:layout_marginEnd="38dp"
        android:text="@string/tv_location"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnLocation"
        app:layout_constraintEnd_toStartOf="@+id/btnLocation"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="112dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="38dp"
        android:text="@string/tv_name"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/etName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/etName" />

    <TextView
        android:id="@+id/tvAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tvBloodDon"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="38dp"
        android:text="@string/tv_amount"
        app:layout_constraintBaseline_toBaselineOf="@+id/etAmount"
        app:layout_constraintEnd_toStartOf="@+id/etAmount"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvPhoneNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="57dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="41dp"
        android:text="@string/tv_phone_num"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/etChooseTime"
        app:layout_constraintEnd_toStartOf="@+id/etPhoneNum"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etAmount" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="71dp"
        android:layout_marginEnd="38dp"
        android:text="@string/tv_blood_group"
        app:layout_constraintBaseline_toBaselineOf="@+id/spinnerBloodGroup"
        app:layout_constraintEnd_toStartOf="@+id/spinnerBloodGroup"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvBloodDon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvName"
        android:layout_alignParentStart="true"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        android:text="@string/tv_req_blood"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/etName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>